{
  "database": {
    "host": "localhost",
    "port": 5434,
    "user": "airflow",
    "password": "airflow",
    "database": "airflow"
  },
  "storage": {
    "deals_type": "memory_first_postgres",
    "orders_type": "memory_first_postgres",
    "tickers_type": "memory_first_parquet",
    "orderbooks_type": "memory_first_parquet",
    "batch_size": 10000,
    "dump_interval_minutes": 5,
    "fallback_enabled": true
  },
  "binance": {
    "sandbox": {
      "apiKey": "",
